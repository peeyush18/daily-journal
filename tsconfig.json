{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true,
    //  TODO - Uncomment the following line to enable declaration files generation
    // "declaration": false,
    "composite": true,
    "noEmitOnError": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}